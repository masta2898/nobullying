<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>AdminPage</servlet-name>
        <servlet-class>ua.sumy.stpp.nobullying.controller.AdminPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminPage</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>ua.sumy.stpp.nobullying.controller.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NoBullying</servlet-name>
        <servlet-class>ua.sumy.stpp.nobullying.controller.NoBullyingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NoBullying</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>ua.sumy.stpp.nobullying.controller.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReportsManaging</servlet-name>
        <servlet-class>ua.sumy.stpp.nobullying.controller.ReportsManagingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ReportsManaging</servlet-name>
        <url-pattern>/reports</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminPage</servlet-name>
        <servlet-class>ua.sumy.stpp.nobullying.controller.AdminPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminPage</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <error-page>
        <exception-type>404</exception-type>
        <location>/404error.html</location>
    </error-page>

</web-app>